<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users`</title>
    <style>
      table,
      tr,
      th,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <h1>All Users</h1>
    <table>
      <tr>
        <th>id</th>
        <th>email</th>
        <th>name</th>
      </tr>
      <% for(let user of users){ %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td>
          <form method="get" action="/user/<%= user.id %>/edit">
            <button>Edit User Name</button>
          </form>
        </td>
        <td>
          <form method="get" action="/user/<%= user.id %>/delete">
            <button>Delete User</button>
          </form>
        </td>
      </tr>
      <%}%>
    </table>
    <form method="get" action="/user/new"><button>Add New User</button></form>
  </body>
</html>
